
TWI_READ:
		ldi		r16,(1<<TWINT) | (1<<TWSTA) | (1<<TWEN)		// Send start
		sts		TWCR, r16 
		call	W_WAIT2 // vill inte göra tx delen 			
		
LOAD_SLA_R:
		ldi		r20, (SEG_7_L << 1 ) | 1
		//lds		r16, SLA_W   //SLA_W // laddar SLA_W till  TWDR register. Clear TWINT bit in TWCR för att starta överföring av adressen 
		sts		TWDR, r20 //lds först
		call	TX

// För att skriva med twi, säger att den ska ladda in data som vi vill skriva till r16 
READ_BYTE:
		ldi		r16, (1<<TWINT) | (1<<TWEN)
		sts		TWCR, r16
		call	 TX

READ_DATA:
		lds		r17, TWDR
		sts		DATA, r17

R_STOP:
		ldi		r16, (1<<TWINT) | (1<<TWEN) | (1<<TWSTO)
		sts		TWCR, r16
		ret

TX:
		ldi		r16, (1<<TWINT) | (1<<TWEN)
		sts		TWCR, r16

W_WAIT2:
		lds		r24,TWCR	// WAIT for TWINT flag set, betyder att SLA+W har skickats och ACK/NACK har tagits emot
		sbrs	r24,TWINT
		rjmp	W_WAIT2
		ret
	
